<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/list_divider_size">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/list_background_color"
        android:paddingVertical="@dimen/activity_vertical_margin">

        <androidx.cardview.widget.CardView
            android:id="@+id/profilePicCardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="@dimen/profile_pic_size"
            app:contentPadding="@dimen/profile_card_padding">

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/profilePicImageView"
                android:layout_width="@dimen/profile_pic_size_small"
                android:layout_height="@dimen/profile_pic_size_small"
                android:src="@color/white"
                app:roundPercent="1"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/fullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_toEndOf="@id/profilePicCardView"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="@dimen/title_text_size"
            tools:text="@tools:sample/full_names" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider_size"
        android:background="@android:color/transparent" />
</LinearLayout>